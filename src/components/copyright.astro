<script>
    document.addEventListener('scroll', function () {
        const homeSection = document.getElementById('home');
        const copyright = document.querySelector('.copyright');
  
        if (homeSection && copyright) {
            const rect = homeSection.getBoundingClientRect();
            const isHomeSectionVisible = rect.top >= 0 && rect.bottom <= window.innerHeight;
  
            if (isHomeSectionVisible) {
                // Add a class to make copyright visible
                copyright.classList.remove('slide-out');
            } else {
                // Remove the class to hide copyright
                copyright.classList.add('slide-out');
            }
        }
    });
  </script> 